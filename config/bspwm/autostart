#!/bin/sh

. "${HOME}/.cache/wal/colors.sh"
killall dunst
dunst -nb "$background" -nf "$foreground" -cb "$background" -cf "$foreground" -lb $background -lf $foreground &

killall picom
picom &

killall nm-applet
nm-applet &

killall kdeconnect-indicator
kdeconnect-indicator &

killall xss-lock
xss-lock i3lock-next "Welcome Back, Liupold." "Fira Code" &

#Polybar
sh ~/scripts/system_managment/launch_polybar.sh

#volume
pactl set-sink-volume 0 80%

#cursor
xsetroot -cursor_name left_ptr
notify-send "Ready!"
