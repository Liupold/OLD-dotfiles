#!/bin/sh
if [ -z "$(pidof cmus)" ]
then
    command -v 'termux-info' > /dev/null && pulseaudio --daemon
    screen -dmS 'cmus' "$(which -a cmus | tail -1)"
    screen -S 'cmus' -p 0 -X stuff ":clear^M:add $LUNA_MUSIC_DIR^M"
    screen -r -S 'cmus'
else
    screen -d 'cmus'
    screen -r -S 'cmus'
fi
