#!/bin/sh

selected_song="$(find Music/ -type f | dmenu -l 10 -b | xargs basename)"
if [ -n "${selected_song}" ];
then
        pidof cmus || {
                tmux new -d -s cmux /usr/bin/cmus
                tmux send ":clear" Enter ":add ${LUNA_MUSIC_DIR}" Enter
                sleep 1
        }
        tmux send  "/${selected_song}" Enter Enter
fi
