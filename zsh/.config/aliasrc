alias ls="ls --color=auto -v"
alias grep="grep --color"
alias ll="ls -lhv"
alias l="ls -lahv"
alias zathura="zathura --fork"
alias p="sudo pacman"
alias v='vim'
alias sv='sudo vim'
alias py='python'
alias pypad='vim /tmp/pypad.py'
alias add-music-from-yt="youtube-dl --format='bestaudio' --extract-audio --audio-format=mp3  --add-metadata --output='~/Music/%(title)s.%(ext)s'"
alias wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"'
