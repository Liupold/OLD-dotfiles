#!/bin/sh
killall -9 pipestatus
pkill -f 'PIPESTATUS_*'
export PIPESTATUS_PIPE="/tmp/dwmbar"
padding="                                               "
TEMPLATE="${TEMPLATE}<PLAYERCTL> "
TEMPLATE="${TEMPLATE} <CPU>  <MEM> <NET_SPEED>  <LIGHT> <VOL_SYM> <VOL> <BAT>"
TEMPLATE="${TEMPLATE}  <DATE>"
LOAD="/home/rohnch/apps/pipestatus/modules/PIPESTATUS_" # Module path
# MODULES_TO_LOAD="NET_SPEED TOP DATE ALSA LIGHT PLAYERCTL"

pipestatus -f "$PIPESTATUS_PIPE" -t "$TEMPLATE" \
        --exec "${LOAD}TOP > $PIPESTATUS_PIPE &
        ${LOAD}NET_SPEED > $PIPESTATUS_PIPE  & ${LOAD}LIGHT > $PIPESTATUS_PIPE &
        ${LOAD}PULSE > $PIPESTATUS_PIPE & ${LOAD}DATE > $PIPESTATUS_PIPE&
        ${LOAD}BAT > $PIPESTATUS_PIPE & ${LOAD}PLAYERCTL > $PIPESTATUS_PIPE &" \
        | while read -r bar_info; do
        xsetroot -name "$padding$bar_info"
done

