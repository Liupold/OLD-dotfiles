#!/bin/sh

filename="$1"

make_py() {
        # run .py files
    echo "Running Python File ["$filename"]..."
    time python -u "$filename"
    exit 0
}

make_tex() { # .tex -> .pdf
    echo "Generating PDF ["$filename"]..."
    time python ~/.local/bin/vim/latexrun.py "$filename" && \
            rm -r latex.out
    exit 0
}


echo "$filename" | grep -q -e '.*.py$' && make_py
echo "$filename" | grep -q -e '.*.tex$' && make_tex


echo "$filename" is not understood. && exit 1
