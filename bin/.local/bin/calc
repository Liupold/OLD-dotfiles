#!/bin/sh

eqn=$(echo "$*" | sed  -e "s/\([0-9]\+\)!/factorial(\1)/g" \
        -e "s/-gt/>/g"   -e "s/-lt/</g" \
        -e "s/-le/<=/g" -e "s/-ge/>=/g" -e "s/^?//1"\
        -e "s/-eq/==/g" -e "s/-ne/!=/g")

if [ "$1" = '?' ]; then
        python3 -c "from math import *; eqn=($eqn); import sys; sys.exit(not eqn)"
        exit $?
else
        python3 -c "from math import *; print(f'{$eqn}')"
fi
