#!/bin/sh

open_yt() {
        command -v "termux-open" && termux-open $1 && return;
        setsid -f yplay --force-window=immediate --no-keepaspect-window  --really-quiet --save-position-on-quit "$1" 2> /dev/null;
}


open_video() {
        command -v "termux-open" && termux-open $1 && return;
              setsid -f mpv --force-window=immediate --no-keepaspect-window --really-quiet --save-position-on-quit "$1" 2> /dev/null;
}

open_image() {
        tmp_img="$(mktemp /tmp/XXXXXXXX)"
        wget "$1" -O "$tmp_img" && \
        sxiv "$tmp_img" && rm "$tmp_img"; }

open_pdf() {
        tmp_pdf="$(mktemp /tmp/XXXXXXXX)"
        wget "$1" -O "$tmp_pdf" && \
                zathura "$tmp_pdf" && rm "$tmp_pdf"

}
open_gif() {
        tmp_gif="$(mktemp /tmp/XXXXXXXX)";
         wget "$1" -O "$tmp_gif" && \
                mpv --loop "$tmp_gif" && rm "$tmp_gif"
}


url="$1"
case "${url%%\?*}" in
        https://www.youtube.com/watch* | https://youtu.be/* \
                | https://www.youtube.com/playlist* )
                open_yt "$url" & continue;;
        *.pdf)
                open_pdf "$url" & continue ;;

        *.jpg | *.jpeg | *.png )
                open_image "$url" & continue ;;

        *.mp3 | *.opus | *wav | *.m4a | *.ogg | *.flac )
                open_video "$url"& continue ;;

        *.mp4 | *.mkv | *.mov | *.webm )
                open_video "$url"& continue ;;

        *.gif )
                open_gif "$url"& continue ;;
        *)
                content_type="$(curl --silent -X HEAD -I "$url" |  \
                        grep 'content-type:')"

                echo "$content_type"

                [ "${content_type##*image}" != "$content_type" ]  \
                        && open_image "$url" & exit

                [ "${content_type##*audio}" != "$content_type" ]  \
                        && open_video "$url" & exit

                [ "${content_type##*video}" != "$content_type" ]  \
                        && open_video "$url" & exit

                "${BROWSER?}" "$url"
                continue ;;

esac
